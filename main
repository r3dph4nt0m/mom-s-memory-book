/* style.css */
body {
  font-family: 'Shadows Into Light', cursive;
  background-color: #fdf6e3;
  margin: 0;
  padding: 0;
}

.book {
  width: 90%;
  max-width: 800px;
  margin: 2rem auto;
  background: white;
  border: 2px solid #ccc;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  padding: 2rem;
  overflow-x: auto;
}

.page {
  margin-bottom: 3rem;
  border-bottom: 1px dashed #aaa;
  padding-bottom: 2rem;
}

.images {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin: 1rem 0;
}

.images img {
  width: 48%;
  border: 1px solid #999;
  border-radius: 10px;
}

.caption {
  font-size: 1.2rem;
  color: #555;
}

.letter {
  font-size: 1.5rem;
  margin-top: 1rem;
  color: #333;
}

/* Responsive */
